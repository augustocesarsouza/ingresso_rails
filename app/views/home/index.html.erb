<header class="bg-dark py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="text-center text-white">
      <h1 class="display-4 fw-bolder">Sua loja virtual preferida</h1>
      <p class="lead fw-normal text-white-50 mb-0">Aqui vai ser o slogan</p>
    </div>
  </div>
</header>
<section class="py-5 section-custom">
  <div id="carouselExampleControls" class="carousel slide">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <div class="ms-2 me-2 carousel-custom">
          <% @movies.each do |movie| %>
            <div class="col-custom">
              <div class="card card-movie">
                <%= image_tag movie.image_main, class: "movie-image", alt: movie.title %>
              </div>
              <div class="custom-card-body">
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%# <button class="carousel-control-prev hide-prev button-custom-previous" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
  </button> %>
  <div class="container-arrow-left" >
    <i class="fa-solid fa-angle-left i-arrow-custom-left"></i>
    <span class="visually-hidden">Previous</span>
  </div>
  <div class="container-arrow-right" >
    <i class="fa-solid fa-angle-right i-arrow-custom-right"></i>
    <span class="visually-hidden">Next</span>
  </div>
  <%# <button class="carousel-control-next button-custom-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
  </button> %>
</section>
