<p style="color: green"><%= notice %></p>
<h1 class="h3 mb-4 text-gray-800">Categories</h1>
<div class="row">
  <div class="col-lg-12">
    <!-- Circle Buttons -->
    <div class="card shadow mb-4">
      <div class="card-body">
        <table class="table table-striped">
          <thead>
            <th>Title</th>
            <th>Price</th>
            <th>Fee</th>
            <th>Movie Id</th>
            <th>Cinema Id</th>
            <th>Ação</th>
          </thead>
          <tbody>
            <%@additional_food_movies.each do | afm | %>
              <tr>
                <td><%= afm.title %></td>
                <td>R$ <%= afm.price %></td>
                <td>R$ <%= afm.fee %></td>
                <td><%= afm.movie_id %></td>
                <td><%= afm.cinema_id %></td>
                <td class="col-lg-3">
                  <%= link_to "Details", admin_additional_food_movie_path(afm), class: 'btn btn-primary' %>
                  <% if policy(AdditionalFoodMovie).new? %>
                    <%= link_to "Edit", edit_admin_additional_food_movie_path(afm), "data-controller": "admin-modal", class: 'btn btn-secondary' %>
                  <% else %>
                    <%= link_to "Edit", edit_admin_additional_food_movie_path(afm), class: 'btn btn-secondary' %>
                  <% end %>
                  <%= link_to "Delete", admin_additional_food_movies_path(afm), class: 'btn btn-danger', method: :delete,  data: { turbo_method: :delete, turbo_confirm: 'Deseja realmente excluir?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <% if policy(AdditionalFoodMovie).new? %>
          <%= link_to "New movie", new_admin_additional_food_movie_path, "data-controller": "admin-modal", class: 'btn btn-primary' %>
        <% else %>
          <%= link_to "New movie_theater", new_admin_additional_food_movie_path, class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
