<p style="color: green"><%= notice %></p>
<h1 class="h3 mb-4 text-gray-800">Categories</h1>
<div class="row">
  <div class="col-lg-12">
    <!-- Circle Buttons -->
    <div class="card shadow mb-4">
      <div class="card-body">
        <table class="table table-striped">
          <thead>
            <th>Título</th>
            <th>Descrição</th>
            <th>Ações</th>
          </thead>
          <tbody>
            <%@movies.each do | movie | %>
              <tr>
                <td><%= movie.title %></td>
                <td><%= movie.description %></td>
                <td>
                  <%= link_to "Details", admin_movie_path(movie), class: 'btn btn-primary' %>
                  <%= link_to "Edit", edit_admin_movie_path(movie), class: 'btn btn-secondary' %>
                  <%= link_to "Delete", admin_movie_path(movie), class: 'btn btn-danger', method: :delete,  data: { turbo_method: :delete, turbo_confirm: 'Deseja realmente excluir?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to "New movie", new_admin_movie_path, "data-controller": "admin-modal", class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
