<div class="container-new-user-main">
  <div class="container-info-register-buy-tecket">
    <h2 class="h2-register">Cadastre-se</h2>
    <p class="p-info-buy-ticket">Compre ingressos e combos de pipoca com conforto e comodidade.</p>
  </div>
  <%= simple_form_for(resource, html: { class: 'login-form' }, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <div class="container-name-cpf">
        <%= f.input :name,
                required: true,
                autofocus: true,
                label: false, #tira nome "email",
                placeholder: '*Como quer ser chamadado'%>
        <%= f.input :cpf,
                input_html: { class: "mask-cpf" },
                required: true,
                autofocus: true,
                label: false, #tira nome "email",
                placeholder: '*CPF'%>
      </div>
      <div class="container-password">
        <%= f.input :password,
                required: true,
                label: false, #tira nome "email",
                placeholder: '*Senha no mÃ­nimo 6 caracteres',
                input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                required: true,
                label: false, #tira nome "email",
                placeholder: '*Confirmar senha',
                input_html: { autocomplete: "new-password" } %>
      </div>
      <%= f.input :email,
                required: true,
                autofocus: true,
                label: false, #tira nome "email",
                placeholder: '*E-mail',
                input_html: { autocomplete: "email" }%>
      <%# f.input :phone,
                input_html: { class: "mask-phone" },
                required: true,
                autofocus: true,
                label: false, #tira nome "email",
                placeholder: 'Telefone'%>
    </div>
    <%= render "devise/shared/button_submit", f: f, text: 'Cadastrar' %>
  <% end %>
  <div class="form-group d-md-flex">
    <div class="w-100 text-md-right">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
